{
  "root": true,
  "env": { "node": true, "browser": true, "es2022": true },
  "extends": ["standard"],
  "parserOptions": { "ecmaVersion": 2022, "sourceType": "module" },
  "overrides": [
    {
      "files": ["frontend/**/*.{js,jsx}"],
      "env": { "browser": true },
      "plugins": ["react"],
      "extends": ["standard"],
      "rules": {
        "react/jsx-uses-react": "off",
        "react/react-in-jsx-scope": "off"
      }
    }
  ]
}
